    <title>N Buttons</title>
  </head>
  <body>
    <div class="card text-center">
      <div class="container">
        <div class="card">
          <h1 class="card-header">N BUTTONS</h1>
          <div class="card-body">
            <h5 class="card-title"> CHOOSE THE NUMBER OF BUTTONS YOU WANT TO PLAY </h5>    
            <div class="conteiner">
              <input type="number" class="form-control-center" id="addbuttons" placeholder="">
              <div class="card-body">
                <button class="btn btn-danger " id="clickMe" onclick="return createButtons()"> Click Me !</button>
              </div>   
            </div>
            <div class="container" id="buttons">             
            </div>
          </div>
          <div class="card">
            <div class="card-body">
              <img src="img.png" width="150" class="card-img-center">
              <div class="card-body">
                <div style="font-size:300%;" id="displayme">                  
                </div>
              </div>
            </div>
        </div>        
      </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>   
    <script>       
      var randomNumber;
      function createButtons() { 
        var nButtons = document.getElementById("addbuttons").value;
        document.getElementById("clickMe").onclick = null;
        randomNumber = Math.floor(Math.random() * nButtons) + 1;
        for (let i = 1; i <= nButtons; i++) {
          $("#buttons").append(`<button type="button" id="` + i + `" class="btn btn-primary btn-block" onclick="display(this.id)">Button ` + i + `</button>`);
        }
        return false;
      }

      function display(id) {  
        if (id == randomNumber) {
            $("#displayme").html("It's your lucky day. You should get a loto ticket :)");
          } else {
            $("#displayme").html("Wrong button. Don't give up !");
          }
          return false;
      }
    </script>
